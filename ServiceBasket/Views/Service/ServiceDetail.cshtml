
@{
    ViewBag.Title = "ServiceDetail";
}
@model ServiceBasket.Models.Entity.Service

<h2> @Model.Title </h2>

<p>@Model.Description</p>
<p>@Model.Owner.Name</p>

<br />

<form method="post" action="~/Service/AddComment">
    <label>
        Title:
        <input type="text" name="Title" value="@Model.Title" required />
    </label>
    <br />
    <label>
        Comment:<br />
        <textarea name="Description" cols="40" rows="5" required>@Model.Description</textarea>

    </label>
    <br />
    <input type="submit" name="send" value="AddService" />
</form>
<br />
<ul>


    @foreach (var item in Model.Comments)
    {
        <li><h1>@item.Title</h1><br />
    <p>@item.Content</p></li>
    }
    </ul>
